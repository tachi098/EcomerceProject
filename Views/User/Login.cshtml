@model EcomerceProject.Entities.User
@{ ViewData["Title"] = "Login"; }

<h1>Login</h1>

<div class="cotainer">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">Register</div>
                <div class="card-body">
                    <form asp-action="Login" asp-controller="User" method="post">
                        <div class="form-group row">
                            <label for="email_address" class="col-md-4 col-form-label text-md-right">E-Mail Address</label>
                            <div class="col-md-6">
                                <input type="text" id="email" class="form-control" name="email" asp-for="@Model.email" required autofocus>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="password" class="col-md-4 col-form-label text-md-right">Password</label>
                            <div class="col-md-6">
                                <input type="password" id="password" class="form-control" name="password" asp-for="@Model.password" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6 offset-md-4">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" name="remember"> Remember Me
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 offset-md-4">
                            <button type="submit" class="btn btn-primary">
                                Login
                            </button>
                            <a class="btn btn-primary" asp-action="Register" asp-controller="User">Register</a>
                            <a href="#" class="btn btn-link">
                                Forgot Your Password?
                            </a>
                        </div>

                        <p style="color:red">@ViewBag.Msg</p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>